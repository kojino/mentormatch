<% provide(:title, "Edit") %>
<div class="sign-up-container">
  <div class="row">
      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
       <%= form_for(@user) do |f| %>
        <h2>Edit Your Profile</h2>
        <hr class="colorgraph" script=>
        <%= render 'shared/error_messages' %>
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class:"form-control input-lg", tabindex:"1", placeholder:"Name"%>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class:"form-control input-lg", tabindex:"4", placeholder:"Email Adress"%>
        </div>
        <div class="form-group">
          <%= f.label :background, "My background is..." %>
          <%= f.text_area :background, class:"form-control input-lg input-large", tabindex:"4"%>
        </div>
        <div class="form-group">
          <%= f.label :knowledge, "I can mentor about..." %>
          <%= f.text_area :knowledge, class:"form-control input-lg input-large", tabindex:"4"%>
        </div>
        <div class="form-group">
          <%= f.label :contact, "If you want me to mentor you..." %>
          <%= f.text_area :contact, class:"form-control input-lg input-large", tabindex:"4"%>
        </div>
        <%= f.submit "Save changes", class: "btn btn-primary", tabindex:4 %>
      <% end %>
      <hr class="colorgraph" script=>
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails" target="_blank", class="btn btn-primaty" >change</a>
      </div>
    </div>
  </div>
</div>